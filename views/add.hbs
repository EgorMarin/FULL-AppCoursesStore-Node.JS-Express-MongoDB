<h1>Add a new course</h1>

<form action="/add" method='POST'>
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required>
    <label for="title">Course's name</label>
    <span class="helper-text" data-error="Name is wrong"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required min='1'>
    <label for="price">Course's price</label>
    <span class="helper-text" data-error="Price is wrong"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required>
    <label for="img">Course's img</label>
    <span class="helper-text" data-error="Img is wrong"></span>
  </div>

  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button class="btn btn-primary">Add course</button>
</form>